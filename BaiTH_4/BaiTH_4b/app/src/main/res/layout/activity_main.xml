<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1"
    android:background="#FFFFFF">

    <TextView
        android:layout_span="2"
        android:text="Chương trình tính chỉ số BMI"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="10dp"
        android:background="#FFEB3B"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <TableRow android:id="@+id/tableRow1">
        <TextView
            android:id="@+id/textView1"
            android:text="Nhập Tên:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginRight="25dp"/>

        <EditText
            android:id="@+id/edtTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"/>

    </TableRow>

    <TableRow android:id="@+id/tableRow2">
        <TextView
            android:id="@+id/textView2"
            android:text="Chiều Cao:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginRight="25dp"/>

        <EditText
            android:id="@+id/edtchieucao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:inputType="numberDecimal" />
    </TableRow>

    <TableRow android:id="@+id/tableRow3">
        <TextView
            android:id="@+id/textView3"
            android:text="Cân Nặng:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginRight="25dp"/>

        <EditText
            android:id="@+id/edtcannang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:inputType="numberDecimal" />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btnChandoan"
            android:text="Tính BMI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:textSize="22sp"/>
    </TableRow>
    <TableRow android:id="@+id/tableRow4">
        <TextView
            android:id="@+id/textView4"
            android:text="BMI ="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginRight="25dp"/>

        <EditText
            android:id="@+id/edtBMI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:enabled="false" />
    </TableRow>
    <TableRow android:id="@+id/tableRow5">
        <TextView
            android:id="@+id/textView5"
            android:text="Chuẩn đoán:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginRight="25dp"/>

        <EditText
            android:id="@+id/edtChandoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:enabled="false" />
    </TableRow>

</TableLayout>
